<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="~/Content/img/favicon.ico" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Invista Já</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-right navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <img src="~/Content/img/logo.png" />
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @Html.ActionLink("Logs de Usuários", "Index", "Logs", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Usuários", "Index", "UsuarioAdmin", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Perguntas", "Index", "Perguntas", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Clientes", "Index", "UsuarioSite", new { area = "" }, new { @class = "navbar-brand" })
                    <button class="btn btn-default btn-md">@Html.ActionLink("Sair", "LogOff", "Conta")</button>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Grupo BREW</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>