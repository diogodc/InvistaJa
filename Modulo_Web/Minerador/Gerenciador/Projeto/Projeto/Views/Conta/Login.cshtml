@model Projeto.Models.UsuarioAdmin
<style>
    body{
        background-image:url(/Content/img/background3.jpg);
    }
    .navbar{
        visibility:hidden;
    }
    .row{
        position: relative;
        width:440px;
	    height:280px;
	    top:50%;
	    left:31%;
	    margin-top:-50px;
	    margin-left:-50px;
        border-radius: 30px 30px 30px 30px;
        border-style: groove;
        margin: 0 auto 20px;
    }
    footer{
    position:absolute;
    bottom:0;
    right: 10%;
}   
</style>
@{
    ViewBag.Title = "Login";
}
<img src="~/Content/img/Backup_of_Backup_of_invistaja3.png" class="img-responsive img-rounded"  style="margin:0 auto 20px"/>
<div class="row col-sm-2">
    <div class="conteiner">
        <h2 style="text-align:center">Área Administrativa</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.USER_MANAGEMENT, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.USER_MANAGEMENT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.USER_MANAGEMENT, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.PASSWORD_USER_MANAGEMENT, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PASSWORD_USER_MANAGEMENT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PASSWORD_USER_MANAGEMENT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-success" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
