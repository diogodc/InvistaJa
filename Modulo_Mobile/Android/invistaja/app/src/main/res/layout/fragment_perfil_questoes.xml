<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:baselineAligned="false"
    tools:context=".view.fragments.PerfilQuestoesFragment">

    <TextView
        android:id="@+id/idQuestao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_teste_pergunta"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_aredondado_verde"
        android:gravity="center"
        android:text="@string/str_frg_pefil_btn_enviar"
        android:textAllCaps="false"
        android:textColor="@color/cor_branco"
        android:textSize="18dp"
        android:layout_gravity="bottom" />
</LinearLayout>
